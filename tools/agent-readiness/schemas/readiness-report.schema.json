{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Readiness Report",
  "type": "object",
  "required": [
    "schemaVersion",
    "toolVersion",
    "reportId",
    "createdAt",
    "repoRoot",
    "apps",
    "report",
    "levels"
  ],
  "properties": {
    "schemaVersion": { "type": "string" },
    "toolVersion": { "type": "string" },
    "reportId": { "type": "string" },
    "createdAt": { "type": "integer" },
    "repoRoot": { "type": "string" },
    "repoUrl": { "type": ["string", "null"] },
    "commitHash": { "type": ["string", "null"] },
    "branch": { "type": ["string", "null"] },
    "hasLocalChanges": { "type": ["boolean", "null"] },
    "hasNonRemoteCommits": { "type": ["boolean", "null"] },
    "apps": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "report": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "id",
          "title",
          "level",
          "pillar",
          "scope",
          "numerator",
          "denominator",
          "rationale"
        ],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "level": { "type": "integer", "minimum": 1, "maximum": 5 },
          "pillar": { "type": "string" },
          "scope": { "type": "string", "enum": ["repo", "app"] },
          "numerator": { "type": "integer", "minimum": 0 },
          "denominator": { "type": "integer", "minimum": 1 },
          "rationale": { "type": "string" },
          "failingApps": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "levels": {
      "type": "object",
      "required": ["achievedLevel", "nextLevel", "gate", "progress"],
      "properties": {
        "achievedLevel": { "type": "integer", "minimum": 0, "maximum": 5 },
        "nextLevel": { "type": ["integer", "null"], "minimum": 1, "maximum": 5 },
        "gate": { "type": "number" },
        "progress": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["numerator", "denominator", "completion"],
            "properties": {
              "numerator": { "type": "integer", "minimum": 0 },
              "denominator": { "type": "integer", "minimum": 0 },
              "completion": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "actionItems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["criterionId", "title", "details"],
        "properties": {
          "criterionId": { "type": "string" },
          "title": { "type": "string" },
          "details": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
