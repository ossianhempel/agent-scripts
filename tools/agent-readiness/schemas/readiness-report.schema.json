{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Readiness Report",
  "type": "object",
  "required": [
    "schemaVersion",
    "toolVersion",
    "reportId",
    "createdAt",
    "repoRoot",
    "apps",
    "report",
    "criteriaMeta",
    "levels",
    "levelSummary"
  ],
  "properties": {
    "schemaVersion": { "type": "string" },
    "toolVersion": { "type": "string" },
    "reportId": { "type": "string" },
    "createdAt": { "type": "integer" },
    "repoRoot": { "type": "string" },
    "repoUrl": { "type": ["string", "null"] },
    "commitHash": { "type": ["string", "null"] },
    "branch": { "type": ["string", "null"] },
    "hasLocalChanges": { "type": ["boolean", "null"] },
    "hasNonRemoteCommits": { "type": ["boolean", "null"] },
    "apps": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "report": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "id",
          "title",
          "level",
          "pillar",
          "scope",
          "numerator",
          "denominator",
          "rationale"
        ],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "level": { "type": "integer", "minimum": 1, "maximum": 5 },
          "pillar": { "type": "string" },
          "scope": { "type": "string", "enum": ["repo", "app"] },
          "numerator": { "type": "integer", "minimum": 0 },
          "denominator": { "type": "integer", "minimum": 0 },
          "rationale": { "type": "string" },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "failingApps": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "criteriaMeta": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["level", "scope", "pillar", "status"],
        "properties": {
          "level": { "type": "integer", "minimum": 1, "maximum": 5 },
          "scope": { "type": "string", "enum": ["repo", "app"] },
          "pillar": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pass", "fail", "not_applicable", "not_evaluated"]
          }
        },
        "additionalProperties": false
      }
    },
    "levels": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["completion", "evaluatedCount", "passCount", "unlocked"],
        "properties": {
          "completion": { "type": "number", "minimum": 0, "maximum": 1 },
          "evaluatedCount": { "type": "integer", "minimum": 0 },
          "passCount": { "type": "integer", "minimum": 0 },
          "unlocked": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    },
    "levelSummary": {
      "type": "object",
      "required": ["achievedLevel", "nextLevel", "gate", "levels"],
      "properties": {
        "achievedLevel": { "type": "integer", "minimum": 0, "maximum": 5 },
        "nextLevel": { "type": ["integer", "null"], "minimum": 1, "maximum": 5 },
        "gate": { "type": "number" },
        "levels": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["completion", "evaluatedCount", "passCount", "unlocked"],
            "properties": {
              "completion": { "type": "number", "minimum": 0, "maximum": 1 },
              "evaluatedCount": { "type": "integer", "minimum": 0 },
              "passCount": { "type": "integer", "minimum": 0 },
              "unlocked": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "signals": {
      "type": "object",
      "properties": {
        "ciProvider": { "type": "string" },
        "deploySource": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    },
    "actionItems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["criterionId", "title", "details"],
        "properties": {
          "criterionId": { "type": "string" },
          "title": { "type": "string" },
          "details": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
